cl


N = 10;
xT = 2;
yT = 3;

x_true = @(C,t) C * ( t - 0.5 *  sin(2*t) );
y_true = @(C,t) C * ( 0.5 - 0.5 * cos(2*t) );
func = @(Z) [x_true(Z(1),Z(2)) - xT;
             y_true(Z(1),Z(2)) - yT];

Z = fsolve(func,[1;1]);
C = Z(1); T = Z(2);

assert(abs(x_true(C,T) - xT)<1e-8);
assert(abs(y_true(C,T) - yT)<1e-8);


